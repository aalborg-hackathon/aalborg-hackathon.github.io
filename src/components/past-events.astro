---
import { useEvents } from "../lib/events";

import EventCard from "./event-card.astro";
const { pastEvents } = await useEvents();
type Props = {
  title: string;
};
const { title } = Astro.props;
---

<section class="p-4 md:p-8">
  <h3 class="text-xl mb-2">{title}</h3>
  {pastEvents.map((event) => <EventCard event={event} />)}
</section>
