---
import { getRelativeLocaleUrl } from "astro:i18n";
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import { siteName } from "../constants";

const lang = getLangFromUrl(Astro.url);
const rootLink = getRelativeLocaleUrl(lang, "/");
---

<header
  class="bg-blue-800 p-8 text-white flex flex-row items-center flex-wrap justify-between gap-4 mb-4"
>
  <a href={rootLink}><h1 class="text-4xl font-bold">{siteName}</h1></a>
  <div class="flex gap-4 min-w-[100px]">
    <slot />
  </div>
</header>
